              <th>Order#</th>
              <th>Book Name</th>
              <th>Qty</th>
              <th>Order Date</th>
              <th>Price</th>
              <th>Tax</th>
              <th>Total Amount</th>
              <th></th>
            </tr>
          </thead>
  
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <th><%= Book.find(order.bookId).name %></th>
