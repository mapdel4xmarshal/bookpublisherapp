<center>
  <div id="container">
  	<div class="row">
  		<div class="panel panel-primary">
  		  <div class="panel-body">
  		     	<div class="form-group">
  						<h2>Edit <%= resource_name.to_s.humanize %></h2><hr>
  						<%= devise_error_messages! %>
  					</div>
  					
  		    <div class="panel floatleft signup">
  		     <div class="panel-body">
             <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
             <div class="form-group">
              <div class="field">
                <%= f.label :firstName %><br />
                <%= f.text_field :firstName, autofocus: true, :class => 'form-control', :placeholder => 'First Name' %>
              </div>
              </div>
    						
    						<div class="form-group">
              <div class="field">
                <%= f.label :lastName %><br />
                <%= f.text_field :lastName, :class => 'form-control', :placeholder => 'Last Name' %>
              </div>
              </div>
    						
    						<div class="form-group">
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email Address' %>
              </div>
            </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
    						
    					<div class="form-group">
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off", :class => 'form-control',:placeholder => 'leave blank if you don\'t want to change it' %>
              </div>
            </div>
    						
    						<div class="form-group">
              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
              </div>
            </div>
    						
    						<div class="form-group">
              <div class="field">
                <%= f.label :current_password %><br />
                <%= f.password_field :current_password, autocomplete: "off" , :class => 'form-control', :placeholder => 'Enter current password' %>
                <small>(we need your current password to confirm your changes)</small>
              </div>
            </div>
           </div>
          </div>
  		     <div class="panel floatleft signup">
      				<div class="panel-body">
      				  <div class="form-group">
    							 <div class="field">
                    <%= f.label :contactNumber,'Phone Number' %>
                    <%= f.text_field :contactNumber, :class => 'form-control',:placeholder => 'e.g 222 333 4444' %>
                  </div>
    						</div>
    						<div class="form-group">
    						 <div class="field">
                   <%= f.label :streeAddress,'Street Address' %>
                   <%= f.text_field :streeAddress, :class => 'form-control',:placeholder => 'Enter Your Street Address' %>
                 </div>
    						</div>
    						<div class="form-group">
    							 <div class="field">
                    <%= f.label :city, "City" %>
                    <%= f.text_field :city, autofocus: true, :class => "form-control",:placeholder => 'Enter Your City' %>
                  </div>
    						</div>
    						<div class="form-group">
    							 <div class="field">
                    <%= f.label :province, "Province" %>
                    <%= f.text_field :province, autofocus: true, :class => "form-control",:placeholder => 'Enter Your Province e.g Ontario' %>
                  </div>
    						</div>
    						
    						<div class="form-group">
    							 <div class="field">
                    <%= f.label :postalCode, "Postal Code" %>
                    <%= f.text_field :postalCode, autofocus: true, :class => "form-control",:placeholder => 'e.g N2P 1X1' %>
                  </div>
    						</div>
    						
    						<div class="form-group">
    							 <div class="field">
                    <%= f.label :country, "Country" %>
                    <%= f.text_field :country, autofocus: true, :class => "form-control",:placeholder => 'Enter your Country' %>
                  </div>
    						</div>
      				</div>
      			</div>
      			<!-- -->
  		  
  		  <div class="actions">
                <%= f.submit "Update", :class => 'btn btn-primary btn-block' %>
              </div>
            <% end %>
            <hr>
            <h3>Close my account</h3>
            <small>(Are you unhappy with your account?)</small>
            <p class="center"> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-danger right' %></p>
            
            <%= link_to "Back", :back, :class => 'btn btn-success left', :id => 'mycolor' %>
        </div>
  		</div>		
    </div>
  </div>
</center>