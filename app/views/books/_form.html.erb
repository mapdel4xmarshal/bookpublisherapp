 <div class="panel-group" id="">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
               <span class="glyphicon glyphicon-book"></span> ADD NEW BOOK</a>
            </h4>
        </div>
            <div class="panel-body">
                <div class="">
                    
                    <%= form_for(@book, :authenticity_token => true) do |f| %>
                              <% if @book.errors.any? %>
                                <div id="error_explanation">
                                  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
                            
                                  <ul>
                                  <% @book.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                  <% end %>
                                  </ul>
                                </div>
                              <% end %>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <%= f.label :name %><br>
                                        <%= f.text_field :name, :class => 'form-control', :placeholder => "Enter Book Name" %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.label :description %><br>
                                        <%= text_area(:book, :description, :rows => "5", :class => "form-control", :placeholder => "Short description of the book") %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                         <%= f.label :category %><br>
                                         <%= f.select(:category, options_for_select({ "Comic" => "Comic", "Sci Fi" => "Sci Fi", 
                                         "Religious" => "Religious", "Health" => "Health",  "Sports" => "Sports",  
                                         "Politics" => "Politics",  "Travel" => "Travel",  "Food" => "Food", "Others" => "Others"}),
                                         {prompt: "Select a Category"},{:class => 'form-control'}) %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <%= f.label :condition %><br>
                                        <%= f.select(:condition, options_for_select({ "New" => "New", "Old" => "Old"}),{prompt: "Select Condition"},{:class => 'form-control'}) %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                     <%= f.label :status %><br>
                                     <%= f.select(:status, options_for_select({ "eBook" => "eBook", "Paperbind" => "Paperbind"}),{prompt: "Select Book format"},{:class => 'form-control'}) %>
                                    </div> 
                                    <div class="well well-sm">
                                        <div class="input-group">
                                            <%= f.label :cover %>
                                            <%= file_field_tag "cover", :class => 'form-control', :name => 'upload cover' %>
                                            <br>
                                            <%= f.label :book %>
                                            <%= file_field_tag "book", :class => 'form-control', :name => 'upload book' %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="well well-sm well-primary">
                                        <form class="form form-inline " role="form">
                                        <div class="form-group">
                                        <label>Published Date</label><br>
                                        <div class='input-group date' id='datetimepicker1'>
                                            <%= f.text_field :publishedDate, :class => 'form-control', :placeholder => "Select published date", 'data-provide'     => 'datepicker' %>
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                        <div class="form-group">
                                            <label for="Price">Price</label>
                                            <%= f.text_field :price, :class => 'form-control', :placeholder => "Enter Book Price" %>
                                        </div>
                                       
                                        <div class="form-group">
                                            <div style="text-align : right;"><button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Submit</button></div> <!--#<%= f.submit %> -->
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% end %>
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                </div>
            </div>
    </div>
</div>
  