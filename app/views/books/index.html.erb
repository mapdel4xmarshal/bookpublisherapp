<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Authorid</th>
      <th>Category</th>
      <th>Description</th>
      <th>Price</th>
      <th>Publisheddate</th>
      <th>Status</th>
      <th>Condition</th>
      <th>Cover</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.authorId %></td>
        <td><%= book.category %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td><%= book.publishedDate %></td>
        <td><%= book.status %></td>
        <td><%= book.condition %></td>
        <td><%= book.cover %></td>
        <td><%= book.book %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

