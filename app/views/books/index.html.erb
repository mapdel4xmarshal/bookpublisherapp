<p id="notice"><%= notice %></p>
<div class="table-responsive">
  <div class="panel panel-default" style="border-collapse:collapse;">
    <div class="panel-heading"><h3 class = "">Book List</h3> <%= link_to 'New Book', new_book_path, :class=>"btn btn-success floatright padup" %></div>
      <div class="panel-body">
        <table class="table table-condensed table-responsive" style="border-collapse:collapse;">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Author</th>
              <th>Category</th>
              <th>Published Date</th>
              <th>Price</th>
              <th>Status</th>
              <th>Condition</th>
              <th>Cover</th>
            </tr>
          </thead>
    
          <tbody>
            <% @books.each do |book| %>
                <tr data-toggle="collapse" data-target="#demo<%= book.id %>" class="accordion-toggle">
                      <td><%= book.id %></td>
                      <td><%= book.name %></td>
                      <td><%= book.authorId %></td>
                      <td><%= book.category %></td>
                      <td><%= book.publishedDate %></td>
                      <td><%= book.price %></td>
                      <td><%= book.status %></td>
                      <td><%= book.condition %></td>
                      <td><%= book.Image_Filename %></td>
                      <td><%= book.Book_Filename %></td>
                      <td><button class="btn btn-default btn-xs"><span class="glyphicon glyphicon-eye-open"></span> Show</button></td>
                  </tr>
                  <tr>
                      <td colspan="12" class="hiddenRow"><div class="accordian-body collapse" id="demo<%= book.id %>"> 
                        <table class="table table-striped">
                          <thead>
                            <tr>
                              <th></th>
                              <th>Description</th>
                              <th>Download Link</th>
                              <th colspan="3">Actions</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <td><img src="<%= url_for(:controller => "books", 
                                :action => "show_image", 
                                :id => book.id) %>" alt="<%= book.id %>" class="thumbnail smallthumbs" />
                              </td>
                              <td class="txtjustify"><%= book.description %></td>
                              <td>
                                <a href="<%= url_for(:controller => "books",:action => "show_bookfile",:id => book.id) %>" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-download-alt"></span>  Download</a>
                              </td>
                                <td><%= link_to raw("<span class=\"glyphicon glyphicon-eye-open\"></span>")+" View ", book, :class => "btn btn-default btn-sm" %></td>
                                <td><%= link_to raw("<span class=\"glyphicon glyphicon-edit\"></span>")+' Edit ', edit_book_path(book), :class => "btn btn-default btn-sm" %></td>
                                <td><%= link_to raw("<span class=\"glyphicon glyphicon-trash\"></span>") + 'Delete ', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm" %></td>
                            </tr>
                          </tbody>
                        </table>
                      </td>
                  </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>